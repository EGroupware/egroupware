             mozillaCustom4 $
             mozillaHomeCountryName $
             mozillaHomeLocalityName $
             mozillaHomePostalCode $
             mozillaHomeState $
             mozillaHomeStreet $
             mozillaHomeStreet2 $
             mozillaHomeUrl $
             mozillaNickname $
             mozillaSecondEmail $
             mozillaUseHtmlMail $
             mozillaWorkStreet2 $
             mozillaWorkUrl $
             nsAIMid $
             o $
             ou $
             pager $
             postalCode $
             postOfficeBox $
             sn $
             st $
             street $
             telephoneNumber $
             title ) )

