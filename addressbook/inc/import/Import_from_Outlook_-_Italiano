			'Telefono TTY/TDD' => '',
			'Telex' => '', //organization
			'Account' => '',
			'Anniversario' => '',
			'Nome assistente' => '', //newPilotPerson
			'Dati fatturazione' => '',
			'Compleanno' => 'bday',
			'Categorie' => '', 
